<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:onClick="NetworkStats"
        android:id="@+id/stutus"
        android:hint="BlueTooth Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:onClick="turnOnBlueTooth"
        android:hint="BlueTooth Tern ON"
        android:id="@+id/bto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:onClick="turnofbluetooth"
        android:hint="Blutooth Turn off"
        android:id="@+id/btfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:hint="Network STATUS"

        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/bt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />




</LinearLayout>